<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_01_Blue</item>
        <item name="colorPrimaryDark">@color/primaryColor_02_Dark_Blue</item>
        <item name="colorAccent">@color/colorSecondary_01_Blue</item>
    </style>
    <!--Theme for Buttons e-Tracker-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_spinner</item>
    </style>
    <!-- Radio buttons-->
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorSecondary_04_White</item>
        <item name="android:textColorSecondary">@color/colorSecondary_04_White</item>
    </style>
    <!--Theme for Buttons e-Tracker-->
    <style name="Buttons" parent="android:Widget.Button">
        <item name="android:drawable">@drawable/button_white</item>
    </style>
    <!--Theme for Dialogs -->
    <style name="DialogseTracker" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg_white</item>
    </style>

    <!-- SPLASH-->
        <style name="SplashTheme" parent="Theme.AppCompat.Light">
            <item name="android:windowBackground">@drawable/splash_screen_start</item>
        </style>




</resources>
