<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_01_Blue</item>
        <item name="colorPrimaryDark">@color/primaryColor_02_Dark_Blue</item>
        <item name="colorAccent">@color/colorSecondary_01_Blue</item>
    </style>
    <!--Theme for Buttons e-Tracker-->
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_spinner</item>
    </style>
    <!-- Radio buttons-->
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorSecondary_04_White</item>
        <item name="android:textColorSecondary">@color/colorSecondary_04_White</item>
    </style>
    <!--Theme for Buttons e-Tracker-->
    <style name="Buttons" parent="android:Widget.Button">
        <item name="android:drawable">@drawable/button_white</item>
    </style>
    <!--Theme for Dialogs -->
    <style name="DialogseTracker" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg_white</item>
    </style>

    <!-- SPLASH-->
        <style name="SplashTheme" parent="Theme.AppCompat.Light">
            <item name="android:windowBackground">@drawable/splash_screen_start</item>
        </style>
    <!-- Text with no change HOME TRAVEL HEADER-->
    <style name="HomeTravelHeaderTEXTNOCHANGE" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helvetica_neue_lts_td_roman</item>
        <item name="android:textColor">@color/colorSecondary_03_Gray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- Text change HOME TRAVEL HEADER-->
    <style name="HomeTravelHeaderTEXT" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helvetica_neue_lts_td_roman</item>
        <item name="android:textColor">@color/colorSecondary_04_White</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
    </style>



</resources>
